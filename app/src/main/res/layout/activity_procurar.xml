<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.duartelobo.geststocks.ProcurarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Procurar por:"
        android:id="@+id/textProcurar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="224dp"
        android:layout_marginEnd="224dp"
        android:textColor="#000000"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_procura"
        android:layout_below="@+id/textProcurar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textProcurar"
        android:layout_alignEnd="@+id/textProcurar" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/spinner_procura"
        android:layout_toRightOf="@+id/spinner_procura"
        android:layout_toEndOf="@+id/spinner_procura" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procurar"
        android:id="@+id/bt_procurar"
        android:textColor="#000000"
        android:layout_below="@+id/spinner_procura"
        android:layout_toRightOf="@+id/spinner_procura"
        android:layout_toEndOf="@+id/spinner_procura"
        android:onClick="act_procurar" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView2"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:numColumns="4"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Código"
        android:id="@+id/textView32"
        android:textColor="#000000"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/bt_procurar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nome"
        android:id="@+id/textView33"
        android:layout_above="@+id/gridView2"
        android:layout_alignLeft="@+id/bt_procurar"
        android:layout_alignStart="@+id/bt_procurar"
        android:textColor="#000000"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quantidade"
        android:id="@+id/textView34"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/bt_procurar"
        android:layout_toRightOf="@+id/textView33"
        android:layout_toEndOf="@+id/textView33"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Armazém"
        android:id="@+id/textView35"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView34"
        android:layout_alignRight="@+id/gridView2"
        android:layout_alignEnd="@+id/gridView2"
        android:visibility="invisible" />
</RelativeLayout>
