<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.duartelobo.geststocks.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="© Duarte Lobo 2016"
        android:id="@+id/textCopyright"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginBottom="0dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_venda"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/venda"
        android:onClick="vender" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vender"
        android:id="@+id/text_vender"
        android:layout_below="@+id/bt_venda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_alignRight="@+id/bt_venda"
        android:layout_alignEnd="@+id/bt_venda"
        android:gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_registar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/registar"
        android:onClick="registar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Registar"
        android:id="@+id/text_registar"
        android:layout_below="@+id/bt_registar"
        android:layout_alignLeft="@+id/bt_registar"
        android:layout_alignStart="@+id/bt_registar"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignRight="@+id/bt_registar"
        android:layout_alignEnd="@+id/bt_registar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_procurar"
        android:layout_above="@+id/text_registar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/procurar"
        android:onClick="procurar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Procurar"
        android:id="@+id/text_procurar"
        android:layout_below="@+id/bt_procurar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignLeft="@+id/bt_procurar"
        android:layout_alignStart="@+id/bt_procurar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_listar"
        android:layout_below="@+id/text_vender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:onClick="listar"
        android:background="@mipmap/lista" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Listar"
        android:id="@+id/text_listar"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/bt_listar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bt_listar"
        android:layout_alignEnd="@+id/bt_listar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_fornecedores"
        android:layout_alignTop="@+id/bt_listar"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/fornecedores"
        android:onClick="fornecedores" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fornecedores"
        android:id="@+id/text_fornecedores"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/bt_fornecedores"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_armazem"
        android:background="@mipmap/armazem"
        android:layout_alignTop="@+id/bt_fornecedores"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="armazem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Armazém"
        android:id="@+id/text_armazem"
        android:layout_alignTop="@+id/text_fornecedores"
        android:layout_alignLeft="@+id/bt_armazem"
        android:layout_alignStart="@+id/bt_armazem"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_def"
        android:background="@mipmap/definicoes"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/text_fornecedores"
        android:layout_alignLeft="@+id/text_def"
        android:layout_alignStart="@+id/text_def"
        android:onClick="definicoes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Definições"
        android:id="@+id/text_def"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/bt_def"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
